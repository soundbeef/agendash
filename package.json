{
  "name": "@soundbeef/agendash",
  "version": "3.1.0",
  "description": "A modern dashboard for Agenda.js with Pagination and Search capabilities",
  "main": "app.js",
  "bin": "bin/agendash-standalone.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "run-p lint ava",
    "lint": "eslint ./",
    "ava": "ava -v -c 1 --timeout=5m"
  },
  "keywords": [
    "agenda",
    "agendash",
    "dashboard",
    "job-queues"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soundbeef/agendash.git"
  },
  "bugs": {
    "url": "https://github.com/soundbeef/agendash/issues"
  },
  "homepage": "https://github.com/soundbeef/agendash#readme",
  "license": "MIT",
  "files": [
    "bin",
    "lib",
    "public",
    "app.js",
    "*.png",
    "Dockerfile",
    "entrypoint.sh"
  ],
  "dependencies": {
    "@hokify/agenda": "^6.0.0",
    "body-parser": "^1.15.0",
    "commander": "^2.9.0",
    "express": "^4.0.0",
    "mongodb": "*"
  },
  "devDependencies": {
    "@hapi/hapi": "20.2.0",
    "@hapi/inert": "6.0.4",
    "ava": "3.15.0",
    "eslint": "7.19.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-router": "10.0.0",
    "koa-static": "5.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "supertest": "6.1.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended"
  },
  "eslintIgnore": [
    "public"
  ]
}
